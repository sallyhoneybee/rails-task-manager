<h1><%= @task.title %></h1>
 <p><%= @task.details %></p>
 <p><%= @task.completed == true ? "Completed" : "Incomplete" %>
 </p>

<%= link_to "delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you really sure?"} %>
<%= link_to "Edit Task", task_edit_path(@task) %>
<a href="/tasks">Back to list of tasks</a>
